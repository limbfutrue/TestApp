<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lm.com.testapp.act.CameraResultActivity">
    <ImageView
        android:id="@+id/iv_photo_show"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:background="@color/button_bg_green"
        />
    <Button
        android:id="@+id/bt_show"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="showPic"
        android:layout_below="@+id/iv_photo_show"/>
</RelativeLayout>
