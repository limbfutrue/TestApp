<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_safe_edit_height"
        android:layout_marginTop="@dimen/login_safe_edit_margin_top2"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/login_safe_edit_padding_left_right"
        android:paddingRight="@dimen/login_safe_edit_padding_left_right">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_safe_edit_height"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="输入."
            android:longClickable="false"
            android:singleLine="true"
            android:textColor="@color/login_et_text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_safe_edit_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_safe_edit_height"
        android:layout_marginTop="@dimen/login_cb_remember_margin_top"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/login_safe_edit_padding_left_right"
        android:paddingRight="@dimen/login_safe_edit_padding_left_right">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_safe_edit_height"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/login_et_text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_safe_edit_text_size"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirmCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_safe_edit_height"
        android:layout_marginTop="@dimen/login_cb_remember_margin_top"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/login_safe_edit_padding_left_right"
        android:paddingRight="@dimen/login_safe_edit_padding_left_right"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/etConfirmCode"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_safe_edit_height"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/login_et_text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/login_safe_edit_text_size"
            />

        <ImageView
            android:id="@+id/ivConfirmCode"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/login_iv_code_margin_top_bottom"
            android:layout_marginLeft="@dimen/login_safe_edit_padding_left_right"
            android:layout_marginTop="@dimen/login_iv_code_margin_top_bottom"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_cb_remember_margin_top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSave"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_cb_remember_height"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:checked="true"
            android:text="记住密码"
            android:textColor="@color/login_et_text_color"
            android:textSize="@dimen/login_cb_remember_text_size" />

        <CheckBox
            android:id="@+id/phoneNum"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_cb_remember_height"
            android:layout_weight="1"
            android:background="@null"
            android:checked="false"
            android:text="记住账号"
            android:textColor="@color/login_et_text_color"
            android:textSize="@dimen/login_cb_remember_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="切换登录方式"
            android:textColor="#225438"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_btn_margin_top"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/getVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="@color/login_et_text_color" />
    </LinearLayout>

</LinearLayout>