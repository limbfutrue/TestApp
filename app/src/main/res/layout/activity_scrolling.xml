<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="lm.com.testapp.act.ScrollingActivity">
    <lm.com.testapp.view.StickyScrollView
        android:id="@+id/sticky_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/item_1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        />
                    <ImageView
                        android:id="@+id/item_2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        />
                    <ImageView
                        android:id="@+id/item_3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/item_4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/item_5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </ScrollView>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="Divider"
                        android:background="#00AA50"/>
                    <ImageView
                        android:id="@+id/item_6"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorAccent"
                        />
                    <ImageView
                        android:id="@+id/item_7"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorAccent"
                        />
                    <ImageView
                        android:id="@+id/item_8"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorAccent"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/item_9"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorAccent"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/item_10"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"
                        android:background="@color/colorAccent"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </lm.com.testapp.view.StickyScrollView>
    <Button
        android:id="@+id/bt_back_home"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="回到首页"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />
</RelativeLayout>
